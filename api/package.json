{
  "name": "buzzwordquiz-api",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon ./index.ts | pino-pretty",
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "build": "tsc",
    "prebuild": "rm -rf build && npm run compile-schemas",
    "postbuild": "cp -R package.json package-lock.json ./build",
    "test": "jest --testEnvironment=node --runInBand",
    "pretest": "npm run compile-schemas && npm run lint",
    "compile-schemas": "json2ts -i schemas -o types"
  },
  "dependencies": {
    "contentful": "^8.1.7",
    "dotenv": "^8.2.0",
    "fast-json-stringify": "^2.4.1",
    "fastify": "^3.12.0",
    "fastify-helmet": "^5.2.0",
    "ioredis": "^4.22.0",
    "jsonwebtoken": "^8.5.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@types/ioredis": "^4.19.4",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.27",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "json-schema-to-typescript": "^10.1.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.5.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
